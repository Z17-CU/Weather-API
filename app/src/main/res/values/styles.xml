<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background_color">@color/colorPrimary</item>
        <item name="text_color">@color/textColor</item>
        <item name="separator_color">@color/separatorsColor</item>

        <item name="fabLocationBackground">@color/colorAccent</item>
        <item name="accuracyColor">@color/accuracyColor_Day</item>

        <item name="bg_location_color">@color/bg_location_color_Day</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
